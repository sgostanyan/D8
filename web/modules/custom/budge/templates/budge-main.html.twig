<div style="margin-bottom: 3em; display: flex;">
  <div>
    <a href="/node/add/budget/node/add/budget" class="button">Ajouter</a>
  </div>
  <div>
    <a href="/admin/budge/import?destination=/budge" class="button" style="margin-left: 1em;">Importer</a>
  </div>
  <div>
    <a href="/admin/budge/export" class="button" style="margin-left: 1em;">Exporter</a>
  </div>
</div>

{% for id,budget in content %}
  <h2>{{ budget.list['title'] }}</h2>
  <div style="margin-bottom: 1em; display: flex;">
    <div>
      <a href="/budge/edit/{{ id }}" class="button">Editer</a>
    </div>
  </div>

  <table id="budge-{{ id }}" class="budgedisplay">
    <thead>
    <tr>
      <th>Titre</th>
      {#<th>Type</th>#}
      <th>Date</th>
      <th>Montant</th>
      <th>Solde</th>
    </tr>
    </thead>
    <tbody>
    {% for item in budget.sorted %}
      <tr style="background-color: {{ rowBGC[item['id']] }}">
        <td style="font-weight: bold; font-size: 1.3em;">
          <div>
            <img class="icon" style="vertical-align: middle; width: 6%; margin: 0.4em 1.2em 0.4em 0.4em;" src="/{{ item['icon'] }}" alt="icon">{{ item['Titre'] }}
          </div>
        </td>
        {#<td style="font-weight: bold; font-size: 1.4em;">{{ item['Type'] }}</td>#}
        <td style="font-weight: bold; font-size: 1.1em;">{{ item['Date'] }}</td>
        <td style="font-weight: bold; font-size: 1.1em;">{{ item['Montant'] }}</td>
        <td style="font-weight: bold; font-size: 1.1em;">{{ item['Solde'] }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endfor %}
